{
    "name": "criminal-records/crms",
    "description": "Enterprise-grade Criminal Records Management System",
    "type": "project",
    "keywords": ["criminal", "records", "management", "law-enforcement"],
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "symfony/validator": "^6.0",
        "symfony/console": "^6.0",
        "defuse/php-encryption": "^2.4",
        "robmorgan/phinx": "^0.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse app",
        "migrate": "phinx migrate",
        "seed": "phinx seed:run"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

